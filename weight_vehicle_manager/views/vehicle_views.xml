<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vehicle Form View -->
    <record id="view_vehicle_form" model="ir.ui.view">
        <field name="name">transfer.vehicle.form</field>
        <field name="model">transfer.vehicle</field>
        <field name="arch" type="xml">
            <form string="Vehicle">
                <header>
                    <button name="action_set_available" string="Set Available" type="object" 
                            class="btn-primary" attrs="{'invisible': [('state', 'not in', ['in_transit', 'completed', 'maintenance'])]}"/>
                    <button name="action_set_in_transit" string="Set In Transit" type="object" 
                            class="btn-primary" attrs="{'invisible': [('state', '!=', 'available')]}"/>
                    <button name="action_set_completed" string="Set Completed" type="object" 
                            class="btn-primary" attrs="{'invisible': [('state', '!=', 'in_transit')]}"/>
                    <button name="action_set_maintenance" string="Set Maintenance" type="object" 
                            class="btn-secondary" attrs="{'invisible': [('state', '!=', 'available')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="%(action_sale_order_vehicle_orders)d" 
                                icon="fa-shopping-cart" context="{'search_default_vehicle_id': active_id}">
                            <field string="Orders" name="assigned_order_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Vehicle Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="license_plate"/>
                            <field name="max_capacity"/>
                            <field name="current_weight"/>
                            <field name="capacity_usage_percent"/>
                        </group>
                        <group>
                            <field name="driver_name"/>
                            <field name="driver_phone"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Assigned Orders" name="orders">
                            <field name="sale_order_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="total_weight"/>
                                    <field name="state"/>
                                    <field name="is_delivered"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vehicle Tree View -->
    <record id="view_vehicle_tree" model="ir.ui.view">
        <field name="name">transfer.vehicle.tree</field>
        <field name="model">transfer.vehicle</field>
        <field name="arch" type="xml">
            <tree string="Vehicles" decoration-success="state == 'available'" 
                  decoration-info="state == 'in_transit'" 
                  decoration-muted="state == 'completed'"
                  decoration-warning="state == 'maintenance'">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="max_capacity"/>
                <field name="current_weight"/>
                <field name="capacity_usage_percent"/>
                <field name="state"/>
                <field name="driver_name"/>
                <field name="assigned_order_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vehicle Search View -->
    <record id="view_vehicle_search" model="ir.ui.view">
        <field name="name">transfer.vehicle.search</field>
        <field name="model">transfer.vehicle</field>
        <field name="arch" type="xml">
            <search string="Search Vehicles">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="driver_name"/>
                <separator/>
                <filter string="Available" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="In Transit" name="in_transit" domain="[('state', '=', 'in_transit')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Maintenance" name="maintenance" domain="[('state', '=', 'maintenance')]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="High Capacity Usage" name="high_usage" domain="[('capacity_usage_percent', '>', 80)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Driver" name="group_driver" context="{'group_by': 'driver_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vehicle Action -->
    <record id="action_vehicle" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="res_model">transfer.vehicle</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_vehicle_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first vehicle!
            </p>
            <p>
                Define vehicles with their capacity and track their assignments to sales orders.
            </p>
        </field>
    </record>

    <!-- Vehicle Orders Action -->
    <record id="action_sale_order_vehicle_orders" model="ir.actions.act_window">
        <field name="name">Vehicle Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('vehicle_id', '!=', False)]</field>
        <field name="context">{}</field>
    </record>

</odoo>
